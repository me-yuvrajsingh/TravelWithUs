generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file: dev.db"
}

model User{
  id String @id @default(cuid())
  fullname String?
  username String
  email String @unique
  booking Booking[]
  contact Contact?
  password String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Booking{
  bookingId String @id @default(cuid())
  userId String
  user User @relation(fields: [userId],references: [id])
  whereto String
  howmany Int
  arrival DateTime
  leaving DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Contact{
    contactId String @id @default(cuid())
    userId String @unique
    user User @relation(fields: [userId],references: [id])
    name String
    email String
    number String
    subject String
    message String
}

model PackageDetail{
  id String @id @default(cuid())
  place String
  duration String
  visiting_places String
  accomodation String
  price String
  actual_price String
  
}